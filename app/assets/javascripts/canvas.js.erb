$('.edit_block').children('textarea').on('focusout', function(){
  block_id=$(this).parent().attr('id');
  document.getElementById(block_id).submit();
});

$('.edit_block').hide();

$('div.draggable').draggable({helper: 'clone'});

$('td.block').droppable(
    {
      tolerance: 'pointer',
  drop: function(event, ui){
    tweet_id=$(ui.draggable).attr('id');
    id_case=$(this)[0].children[0].id; 
    <% Tweet.associate_block(tweet_id, id_case) %>
  }
    }
    );

