<div id="basket" >
  <%= image_tag("twitter.png", :alt => "Twitter", :size => "50x50", :class => "pull-left") %>
  <h2>Tweets about this</h2>
  <div class="tweets">
    <section class="round">
    <% @tweets.each do |tweet| %>

     <% blocks=TweetToBlock.where(tweet_id: tweet.id).map { |block| block.id_case } %>

      <div class="draggable" id="<%= dom_id(Tweet.find(tweet.id)) %>">
        <dl> 
          <%= image_tag("mushroom.png", :alt => "Avatar", :class => "pull-left") %>   
          <dt><%=tweet.user.name %>
              <% blocks.each do |block| %>
                <%= block %>
              <% end %>
          </dt>
          <dd><%=tweet.text%></dd>
        </dl>
      </div>
    <% end %>
    </section>
  </div>
</div>
